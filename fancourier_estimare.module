    '#options' => $adrese,
    '#ajax' => array(
      'callback' => 'fancourier_estimare_taxetransport_callback',
      'wrapper' => 'taxetransport',
      'method' => 'replace',
      'effect' => 'fade',
    ),
  );
  /////////////////////////////////////////////////////////////////////////////////
  ////////////////////////////////////
  /// Zona in care se va updata pretul
  ////////////////////////////////////////////////////
  $form['transport_taxes'] = array(
